<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:gravity="center_horizontal"
        >
        <!--用户头像-->
        <ImageView
            android:id="@+id/image_dashboard_userimage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:src="@drawable/ic_user"
            android:padding="2dp"
            android:textSize="20dp" >
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_marginRight="7dp"
                android:id="@+id/line_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    >
                    <!--用户名称-->
                    <TextView
                        android:id="@+id/text_dashboard_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:text="用户名:张三呀"
                        android:textSize="15dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:maxEms="15"
                        android:textColor="@color/colorUserName"
                        />
                    <!--该动态发布时间-->
                    <TextView
                        android:id="@+id/text_dashboard_usertime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorUserTime"
                        android:text="发布时间:2019.12.4 10:23"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    >
                    <!--用户卡片装饰-->
                    <ImageView
                        android:id="@+id/image_dashboard_usercard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    >
                    <!--更多菜单-->
                    <ImageView
                        android:id="@+id/image_dashboard_more"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_more"
                        android:clickable="true"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="评论:number.1"
            android:textSize="15dp"
            android:textColor="#0A0A0A"
            android:layout_marginRight="30dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_dongtaizan"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="赞"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_bad"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
